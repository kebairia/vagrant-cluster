# .bashrc

# User specific aliases and functions
export PS1="\[\033[37;1;33m\]\u@\[\033[37;1;208m\]\h \[\033[37;0;34m\]\w\[\033[37;0;32m\]$ \[\033[37;0;0m\]"

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

export TERM=xterm
export EDITOR=vim
export PAGER=less

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi
